---
interface Props {
	imgSrc : string;
    followersCount : string;
    label : string;
}

const { imgSrc, followersCount, label } = Astro.props;
---
<div class='card-wrapper'>
    <div class='card'>
        <div class='card-img-frame'>
            <img class='card-img' src={imgSrc}/>
            <!-- 'https://images.pexels.com/photos/1047442/pexels-photo-1047442.jpeg?auto=compress&cs=tinysrgb&fit=crop&h=1200&w=800' -->
        </div>
        <div class='card-content'>
            <span class='card-content-pill'>
                {followersCount} follows
            </span>
        </div>
    </div>
    <p class='card-label'>{label}</p>
</div>
<style>
.card-wrapper {
    height: 235px;
    width: 160px;
    display: flex; 
    flex-direction: column;
    row-gap: 5px;
    margin: 50px;
}

.card {
    border-radius: 10px;
    overflow: hidden;
    flex: 1 ;
    display: flex;
    flex-direction: column;
}

.card-img-frame {
    width: 160px;
    height: 170px;
}

.card-img-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.card-content {
    flex: 1;
    height: 30px;
    background-color: var(--css-white);
}

.card-content-pill {
    background-color: var(--css-black);
    color: var(--css-white);
    border-radius: 10px;
    padding: 4px 8px;
    margin-left: 7px;
    font-size: 10px;
}

.card-label {
    height: 30px;
    color: var(--css-white);
}  
</style>